<div class="page-content-wrapper">
  <!-- START PAGE CONTENT -->
   <div class="container-fluid container-fixed-lg bg-white">
      <!-- START PANEL -->
      <div class="portlet light portlet-fit portlet-datatable ">
        <div class="portlet-title" style="margin-top: 10px;">
          <button class="btn btn-success" data-target="#promo_modal" data-toggle="modal" style="float: right;">Add</button>
          <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
          <table class="table table-striped demo-table-search" id="tableWithSearch">
            <thead>
              <tr>
                <th>From</th>
                <th>To</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              <% @price.each do |pr| %>
              <tr>
                <td class="v-align-middle semi-bold">
                  <p><%= pr.start_km %> KM</p>
                </td>
                <td class="v-align-middle bold">
                  <p><%= pr.end_km %> KM</p>
                </td>
                <td class="v-align-middle">
                  <p>Â£ <%= pr.price %></p>
                </td>
              </tr>

              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- END PANEL -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="promo_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
    <i class="pg-close"></i>
  </button>
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="text-left p-b-5" style="text-align: center !important;"><span class="bold">Add</span> Price</h5>
      </div>
      <div class="modal-body">
        <%= form_tag( prices_delivery_save_path , id: "form-personal" , method: "post") do %>
            <div class="row clearfix">      
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Start (KM)</label>
                  <%= number_field_tag :start , "", class: 'form-control' , required: true , step: 0.1 %>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>End (KM) %</label>
                  <%= number_field_tag :end , "", class: 'form-control' , required: true , step: 0.1 %>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group form-group-default required">
                  <label>Price %</label>
                  <%= number_field_tag :price , "", class: 'form-control' , required: true , step: 0.1 %>
                </div>
              </div>
            </div>
            <div style="text-align: center;"><%= submit_tag 'Save' , class: "btn btn-primary" %></div>
          <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>