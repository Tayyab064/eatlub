<link href="../website/css/date_time_picker.css" rel="stylesheet">
<div class="page-content-wrapper ">
  <!-- START PAGE CONTENT -->
   <div class="container-fluid container-fixed-lg bg-white">
		<div class="row" style="margin-top: 20px; margin-bottom: 20px;">
			<div class="col-md-8 col-md-offset-2">
		    	<%= form_tag( add_deliverable_save_path , :method => :post , :multipart => true ) do  %>
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Deliverable Name</label>
							<!-- <input type="text" class="form-control" id="name_contact" name="name_contact" placeholder="Jhon"> -->
							<%= text_field_tag :name  , '' , class: 'form-control' , placeholder: 'Mug House' , required: true , autofocus: true %>
						</div>
					</div>
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Deliverable Category</label>
							<br>
							<%= select_tag 'category_test', options_for_select(DeliverCategory.all.collect{ |u| [u.name.capitalize, u.id] } ) , {:class => 'form-control'} %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Phone Number</label>
							<!-- <input type="text" class="form-control" id="name_contact" name="name_contact" placeholder="Jhon"> -->
							<%= text_field_tag :phone_number  , '' , class: 'form-control' , placeholder: '+44 xx xxxx xxxx' , required: true , autofocus: true %>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Location</label>
                           <!-- <input type="text" id="restaurant" name="restaurant" class="form-control" placeholder="Pizza King"> -->
                           <%= text_field_tag :location  , '' , class: 'form-control' , placeholder: '1-3 Tooley Street, London' , required: true , autofocus: true %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Post Code</label>
							<!-- <input type="email" id="email_contact" name="email_contact" class="form-control " placeholder="jhon@email.com"> -->
							<%= text_field_tag :post_code  , '' , class: 'form-control' , placeholder: 'N19 4EE' , required: true , autofocus: true %>
						</div>
					</div>
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Estimated Weekly Orders</label>
							<!-- <input type="text" id="phone_contact" name="phone_contact" class="form-control" placeholder="00 44 5435435"> -->
							<%= number_field_tag :weekly_order  , '' , class: 'form-control' , placeholder: '0', autofocus: true %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-sm-12">
						<div class="form-group">
							<label>No of Locations</label>
							<!-- <input type="email" id="email_contact" name="email_contact" class="form-control " placeholder="jhon@email.com"> -->
							<%= select_tag "no_of_location", "<option value='1'>1</option><option selected='selected' value='2-5'>2-5</option><option value='6-10'>6-10</option><option value='11-25'>11-25</option><option value='25+'>25+</option>".html_safe  , {class: 'form-control'} %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Opening Time</label>
							<!-- <input type="email" id="email_contact" name="email_contact" class="form-control " placeholder="jhon@email.com"> -->
							<%= text_field_tag :opening_time  , '' , class: 'form-control time-pick' , placeholder: '12:00 AM', autofocus: true %>
							
						</div>
					</div>
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Closing Time</label>
							<!-- <input type="text" id="phone_contact" name="phone_contact" class="form-control" placeholder="00 44 5435435"> -->
							<%= text_field_tag :closing_time  , '' , class: 'time-pick form-control' , placeholder: '8:00 PM', autofocus: true %>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Image</label>
							<!-- <input type="text" class="form-control" id="name_contact" name="name_contact" placeholder="Jhon"> -->
							<%= file_field_tag "image"  , required: true %>
						</div>
					</div>
					<div class="col-md-6 col-sm-6">
						<div class="form-group">
							<label>Cover Image</label>
							<!-- <input type="text" class="form-control" id="lastname_contact" name="lastname_contact" placeholder="Doe"> -->
							<%= file_field_tag "cover" , required: true %>
						</div>
					</div>
				</div><!-- End row  -->
				<div id="pass-info" class="clearfix"></div>
                <hr style="border-color:#ddd;">
                <div class="text-center"><button class="btn btn-success" type="submit">Submit</button></div>
				<% end %>
		    </div><!-- End col  -->
		</div><!-- End row  -->
	</div>
</div>

