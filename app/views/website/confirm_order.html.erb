<script type="text/javascript">
	window.onload = function(e){
    coun = parseInt(window.localStorage.getItem('count'));
    if(window.localStorage.getItem('delivery_fee')){
      deli = parseFloat(window.localStorage.getItem('delivery_fee'));
    }else{
      deli = 0 ;
    }
    var tot_pri = 0.0 ;
    console.log('Fetching');
 
    da = '';
    for(i = 0; i < coun; i++){
      if(window.localStorage.getItem('carti[' + i + ']')){
        t = JSON.parse(window.localStorage.getItem('carti[' + i + ']'));
        da = da + "<tr><td> <strong>" + t.quantity +"x</strong> "+ t.title +"</td><td><strong class='pull-right'>AED"+ (t.price*t.quantity)+"</strong></td></tr>";
        tot_pri = tot_pri + (t.price*t.quantity) ;
      }
    }

    /*cvs = tot_pri + deli ;*/
    cvs = tot_pri;
 
    da = da + '<tr><td>Delivery Fee</td><td><strong class="pull-right">Calculating</strong></td></tr><tr><td class="total_confirm"> TOTAL </td><td class="total_confirm"><span class="pull-right">AED' + cvs.toFixed(2) +'</span></td></tr>' ;
 
    document.getElementById("mycarti").innerHTML = da ;
 
    localStorage.clear();
  }

  function pathred(){
    var url = window.location.href;
    var id = url.split("?id=");
    if(id.length > 0){
      window.location.assign("/order_" + id[1]);
    }
  }
</script>