<script type="text/javascript">
	function submitrider(){
		var city = document.getElementById("cit");
		var citValue = city.options[city.selectedIndex].value;

		var vehi = document.getElementById("vehi");
		var vehiValue = vehi.options[vehi.selectedIndex].value;

		document.getElementById('mycity').value= citValue ;
		document.getElementById('myvehi').value= vehiValue ;


		$("#intirider").addClass("hidden");
		$("#ridform").removeClass("hidden");

		/*location.assign("/submit_rider?city="+citValue+"&vehicle="+vehiValue);*/
	}
</script>