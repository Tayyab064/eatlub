        					<h3 class="nomargin_top" id="<%= sec.title %>"><%= sec.title %></h3>
                        <% else %>
        					<hr>
        					<h3 id="<%= sec.title %>"><%= sec.title %></h3>
                        <% end %>
                        <p>
                            <%= sec.description %>
                        </p>
